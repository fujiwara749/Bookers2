<div class="container">

<h1>User info</h1>

<%= form_for(@user) do |f| %>
 <% if @user.errors.any? %>
        <%= @user.errors.count %>件のerrorが発生しました
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
<p>Name<%= f.text_field :name %></p>
<p>Image<%= f.attachment_field :profile_image %></p>
<p>Introduction<%= f.text_area :introduction %></p>
<%= f.submit "Update User" %>
<% end %>

</div>
<footer>
	<div class="container">
	<div class="row">
	<div class="col-xs-3 col-xs-offset-9">
		<P>CopyRight Infratop.inc</P>
	</div>
</div>
</div>
</footer>