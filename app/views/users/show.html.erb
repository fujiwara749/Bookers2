<%= flash[:notice] %>

<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= form_tag("/users/#{@user.id}/update", {multipart: true})do %>
<div><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumd",fallback: "no_image.jpg" %></div>
 <% end %>
<table class="table">
  <tbody>
<tr>
<th>name</th><th><%= @user.name %></th>
</tr>
<tr>
<th>introduction</th><th><%= @user.introduction %></th>
</tr>
</tbody>
</table>
<div class="row">
<%= link_to edit_user_path(@user), class: 'btn btn-default col-xs-12' do  %>
<i class="glyphicon glyphicon-wrench">
  </i>
<% end %>
</div>


<h2>New book</h2>

<%= form_for(@book) do |f| %>

 <h3>Title</h3>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :body %>

 <div class="field row">
 <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>

<% end %>
</div>
</div>
<div class="col-xs-9">

<h3>Books</h3>

 <table class="table">
 <tr>
 <th></th>

  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
 </tr>

<% @books.each do |book| %>
<tr>
<th>
<%= link_to user_path(@user) do %>
	<%= attachment_image_tag @user, :profile_image, :fill, 30,30, class: "img-circle pull-left profile-thumd", fallback:"no_image.jpg" %></th>

	<% end %>

<th><%= link_to book_path(book) do %>
    <%= book.title %>
</th>
<th><%= book.body %></th>
<% end %>
<% end %> 
</tr>

</table> 
</div>

<footer>
	<div class="container">
	<div class="row">
	<div class="col-xs-3 col-xs-offset-9">
		<P>CopyRight Infratop.inc</P>
	</div>
</div>
</div>
</footer>

